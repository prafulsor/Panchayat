@model Panchayat.Models.PanchayatActivity

@{
    ViewData["Title"] = "ActivityDetailsForUser";
}

<h3 class=" text-center mt-5"><span class="text-light shadow rounded-3 bg-success p-2" >Activity Details</span></h3>

<div class="row mt-5 justify-content-center">
    <div class="col-sm-12 col-md-3 d-flex">
        <div class="card ms-2 shadow" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(model => model.Name)</h5>
                <p class="card-text">@Html.DisplayFor(model => model.Description)</p>
                <div>
                    <a class="text-decoration-none text-secondary ">@Html.DisplayFor(model => model.Date)</a>
                </div>
                <button class="form-control bg-secondary mt-2">
                <a class="text-decoration-none text-light" asp-action="ActivitiesForUser">Back</a>
                </button>
            </div>
        </div>
    </div>
</div>
