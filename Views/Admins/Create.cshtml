@model Panchayat.Models.Admin

@{
    ViewData["Title"] = "Create";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-4 shadow-lg p-4">
        <h4 class="text-center text-primary mt-5">Admin</h4>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label mt-3"></label>
                <input type="password" asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label mt-3"></label>
                <input type="password" asp-for="Password" class="form-control " />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Log In" class="form-control shadow text-light bg-primary mt-3" />
            </div>
        </form>
        <button class="form-control bg-secondary mt-2 shadow">
            <a class="text-decoration-none text-light" asp-controller="Home" asp-action="Index">Back</a>
        </button>
    </div>
</div>

